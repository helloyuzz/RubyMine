@page
@model RubyMine.Pages.LogoutModel
@using RubyMine;
@using RubyMine.Models;

@{
    Layout = "~/Pages/Shared/_NavicatLayout.cshtml";
    User cua =  CookieUtils.Get(HttpContext.User.Claims.ToList());
}

<div class="container-fluid pt-4 pb-4 bg-white border-inset vh-60">
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <tr>
                    <td><h3>已登录 @cua.Login，是否退出？</h3></td>
                </tr>
                <tr>
                    <td><label>上次登录：@cua.LastLoginOn.Value.ToString("yyyy-MM-dd HH:mm:ss")</label></td>
                </tr>
                <tr>
                    <td><label>创建于：@cua.CreatedOn.Value.ToString("yyyy-MM-dd HH:mm:ss")</label></td>
                </tr>
                <tr>
                    <td class="border-0">
                        <form method="post">
                            <button type="submit" class="btn-sm fs-9 text-dark border-828790 bg-white">退出登录</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
        @*@foreach (var claim in User.Claims) {
            <tr><td>@claim.Type - @claim - @claim.Issuer</td><td>@claim.Value</td></tr>
        }*@
    </div>
</div>
<div class="waveWrapper waveAnimation border-bottom border-ccc border-top-fff" style="margin-bottom:23px;margin-top:26px;">
    <div class="waveWrapperInner bgTop">
        <div class="wave waveTop" style="background-image: url('/images/wave-png/wave-top.png')"></div>
    </div>
    <div class="waveWrapperInner bgMiddle">
        <div class="wave waveMiddle" style="background-image: url('/images/wave-png/wave-mid.png')"></div>
    </div>
    <div class="waveWrapperInner bgBottom">
        <div class="wave waveBottom" style="background-image: url('/images/wave-png/wave-bot.png')"></div>
    </div>
</div>