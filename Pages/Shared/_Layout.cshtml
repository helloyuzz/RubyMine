<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RubyMine</title>
    <link href="~/lib/bootstrap-5.0.2-dist/css/bootstrap.css" rel="stylesheet">
    @*<script src="~/lib/bootstrap-5.0.2-dist/js/bootstrap.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/64adc7381d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    @*<script src="~/lib/jquery-3.6.0/dist/jquery.min.js"></script>*@
    <link rel="stylesheet" href="~/css/site.css" />

    @{
        string defaultClass = " bg-success bg-gradient shadow rounded-2";
        string htmlUrl = Context.Request.Path.Value;
        htmlUrl = htmlUrl.Substring(htmlUrl.LastIndexOf("/") + 1);
        ViewData["Toolbar_Display"] = "none";

        switch (htmlUrl) {
            case "Projects":
                ViewData["nav_Projects"] = defaultClass;
                break;
            case "Products":
                ViewData["nav_Products"] = defaultClass;
                break;
            case "Requirements":
            case "Details":
                ViewData["nav_Requirements"] = defaultClass;
                ViewData["Toolbar_Display"] = "block";
                break;
            case "Leaks":
                ViewData["nav_Leaks"] = defaultClass;
                break;
            case "Plans":
                ViewData["nav_Plans"] = defaultClass;
                break;
            case "Clocks":
                ViewData["nav_Clocks"] = defaultClass;
                break;
            case "Wiki":
                ViewData["nav_Wiki"] = defaultClass;
                break;
            case "Documents":
                ViewData["nav_Documents"] = defaultClass;
                break;
            case "Helps":
                ViewData["nav_Helps"] = defaultClass;
                break;
            case "Privacy":
                ViewData["nav_Privacy"] = defaultClass;
                break;
            default:
                ViewData["nav_Index"] = defaultClass;
                break;
        }
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 lh-sm p-1 shadow">
            <div class="container-fluid bg-transparent">
                <a class="navbar-brand  text-white" href="#Index">RubyMine</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between pr-0">
                    <div class="row w-100 ml-0 mr-0">
                        <div class="col">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Index"]" asp-area="" asp-page="/Index" title="">个人工作台</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Products"]" asp-area="" asp-page="/Products/Index">公司产品</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Requirements"]" asp-area="" asp-page="/Requirements/Index">需求跟踪</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Plans"]" asp-area="" asp-page="/Plans/Index">研发计划</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Clocks"]" asp-area="" asp-page="/Clocks/Index">工时填写</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7  @ViewData["nav_Leaks"]" asp-area="" asp-page="/Leaks/Index">缺陷列表</a>
                                </li>
                                @*<li class="nav-item">
                                        <a class="nav-link text-white fs-7" asp-area="" asp-page="/Employees/Index">员工列表</a>
                                    </li>*@
                                @*<li class="nav-item">
                                        <a class="nav-link text-white fs-7 @ViewData["nav_Projects"]" asp-area="" asp-page="/Projects/Index">医院列表</a>
                                    </li>*@
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Wiki"]" asp-area="" asp-page="/Wiki/Index">Wiki</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Documents"]" asp-area="" asp-page="/Documents/Index">文档附件</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Helps"]" asp-area="" asp-page="/Helps/Index">使用帮助</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7 @ViewData["nav_Privacy"]" asp-area="" asp-page="/Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                        @*<div class="col-3">
                                <div class="input-group pt-1">
                                    <input type="text" class="form-control bg-transparent p-1 m-0 fs-7 mr-1 shadow rounded-3" placeholder="请输检索内容" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <button class="input-group-text bg-danger fs-7 p-0 m-0 ps-3 pr-3" id="basic-addon2">检索</button>
                                </div>
                            </div>*@
                        <div class="col-1 d-flex align-content-end text-right justify-content-end mr-0 pr-0">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-white fs-7" asp-area="" asp-page="/Management/Project"><i class="bi bi-gear"></i>&nbsp;设置</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted lh-middle">
        <div class="container-fluid text-center p-1 fs-7">
            RubyMine @@ Powered by Jack Sparrow - <a asp-area="" asp-page="/Privacy">Privacy</a> &nbsp;四川劳吉克信息技术有限公司
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>
