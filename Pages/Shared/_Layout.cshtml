@using RubyMine.Models;
@{ 
    User cua = SessionUtils.Get<User>(Context.Session, "cua");
    bool aleradyLogin = cua != null;
    string requestPath = Context.Request.Path.ToString();
    if (string.IsNullOrEmpty(requestPath.Trim('/'))==false && aleradyLogin == false) {
        Context.Response.Redirect("/");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RubyMine</title>
    <link href="~/lib/bootstrap-5.0.2-dist/css/bootstrap.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/64adc7381d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .menu-True {
            background-color: #198754 !important;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            background-image: var(--bs-gradient) !important;
            border-radius: 0.25rem !important;
        }
        html, body {
            height: 100%;
            margin: 0;
        }
        .full-height {
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="full-height">
        @if (ViewData["showTitle"] == null || string.IsNullOrEmpty(ViewData["showTitle"].ToString())) {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow lh-sm p-1 shadow">
                    <div class="container-fluid bg-transparent">
                        <a class="navbar-brand text-decoration-none text-white" href="#Index">RubyMine</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between pr-0">
                            <div class="row w-100 ml-0 mr-0">
                                @{ if (aleradyLogin) {
                                        <div class="col">
                                            <ul class="navbar-nav flex-grow-1">
                                                @*<li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Products")" asp-area="" asp-page="/Products/Index">项目列表</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Versions")" asp-area="" asp-page="/Versions/Index">版本管理</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Requirements")" asp-area="" asp-page="/Requirements/Index">需求跟踪</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Plans")" asp-area="" asp-page="/Plans/Index">开发管理</a>
                                                </li>*@
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Creation")" asp-area="" asp-page="/Creation/Index">3.0 新产品开发平台</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Leaks")" asp-area="" asp-page="/Leaks/Index">缺陷列表</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Clocks")" asp-area="" asp-page="/Clocks/Index">工时统计</a>
                                                </li>
                                                @*
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Wiki")" asp-area="" asp-page="/Wiki/Index">Wiki</a>
                                                </li>*@
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Documents")" asp-area="" asp-page="/Documents/Index">文档及附件</a>
                                                </li>
                                                @*<li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Helps")" asp-area="" asp-page="/Helps/Index">使用帮助</a>
                                                </li>*@
                                                @*<li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Contains("Privacy")" asp-area="" asp-page="/Privacy">Privacy</a>
                                                </li>*@
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7 menu-@requestPath.Equals("/")" asp-area="" asp-page="/Index" title="">个人工作台</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="col-1 d-flex align-content-end text-right justify-content-end mr-0 pr-0">
                                            <ul class="navbar-nav">
                                                <li class="nav-item">
                                                    <a class="nav-link text-decoration-none text-white fs-7" asp-area="" asp-page="/Management/About"><i class="bi bi-gear"></i>&nbsp;设置</a>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </nav>
            </header>}
        <div class="container-fluid p-2 mb-3" style="overflow-x:hidden;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @if (ViewData["showTitle"] == null || string.IsNullOrEmpty(ViewData["showTitle"].ToString())) {
            <footer class="border-top bg-light @ViewData["showFooter"] text-muted lh-middle">
                <div class="container-fluid text-center p-1 fs-7">
                    RubyMine @@ Powered by Jack Sparrow - <a asp-area="" asp-page="/Privacy">Privacy</a> &nbsp;四川劳吉克信息技术有限公司
                </div>
            </footer>
        }
        @await RenderSectionAsync("Scripts", required: false)
