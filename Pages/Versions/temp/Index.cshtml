@page
@model RubyMine.Pages.Versions.temp.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].EffectiveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].UpdatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].WikiPageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].Sharing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version[0].Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Version) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WikiPageTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sharing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
