@page
@model RubyMine.Pages.Version.IndexModel
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col border-1 border-ccc">
            <div class="row">
                <div class="col bg-title ps-1 border-bottom border-ccc">
                    版本计划<a href="#Temp" class="mt-3"><span class="float-end fs-7" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="bi bi-plus-lg fs-7"></i>&nbsp;新建版本</span></a>
                </div>
                <div class="row fs-7 pr-0">
                    <div class="col p-1">
                        <table id="mainTable" class="table table-hover lh-1 fs-7 border-1 border-ccc">
                            <thead>
                                <tr style="background:#eee;">
                                    <th>#</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].ProjectId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].CreatedOn)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].EffectiveDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].Status)</th>
                                    <th>@Html.DisplayNameFor(model => model.Version[0].Status)</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Version) { 
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ProjectId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedOn</td>
                                    <td>@item.EffectiveDate</td>
                                    <td>@item.Status</td>
                                    <td>@item.Status</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="lh-0 col border-1 border-ccc border-bottom-0 bg-title ps-1 pt-2 pb-2">
                项目列表
            </div>
            <table id="mainTable" class="table table-hover lh-1 fs-7 border-1 border-ccc">
                <thead>
                    <tr>
                        <th>#</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>