@page
@model RubyMine.Pages.Issues.NewModel
@using RubyMine.Models;
@using RubyMine.CustomModels;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RubyMine</title>
    <link href="~/lib/bootstrap-5.0.2-dist/css/bootstrap.css" rel="stylesheet">
    @*<script src="~/lib/bootstrap-5.0.2-dist/js/bootstrap.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/64adc7381d.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-3.6.0/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">

    @{
        Layout = null;
    }
    <style>
        .line-height-row {
            padding-top:2px;
            padding-bottom:2px;
        }
        .w-30 {
            width: 30% !important;
        }
    </style>
</head>
<body class="bg-white p-2">
    <div class="row m-0 p-0 pr-3 w-100">
        <table width="100%" class="mt-1 mr-1">
            <tr>
                <td width="76px" class="p-0 text-right">
                    <label for="inputPassword" class="col-form-label form-control-sm fw-bold fs-7">主题&nbsp;<span class="text-danger fw-bold">*</span></label>
                </td>
                <td class="line-height-row">
                    <input type="text" class="form-control form-control-sm fs-7 text-666" id="issue_Subject" value="@Model.Tracker_id" autocomplete="off">
                </td>
            </tr>
            <tr>
                <td width="76px" class="p-0 text-right">
                    <label for="inputPassword" class="col-form-label form-control-sm fw-bold fs-7">状态&nbsp;<span class="text-danger fw-bold">*</span></label>
                </td>
                <td class="line-height-row">
                    @Html.DropDownList("issue_IssueStatus", new SelectList(Model.DB_IssueStatus,"Id","Name"), new{@class="form-select m-0 w-25 p-1 text-666 fs-7"})
                </td>
            </tr>
            @{
                foreach (CustomField customField in Model.CustomField) {
                    <tr id="tr_@customField.Id">
                        <td width="76px" class="p-0 text-right" valign="top">
                            <label for="inputPassword" class="col-form-label form-control-sm fw-bold fs-7">@customField.Name@Html.Raw(RMUtils.Html_IsRequired(customField.IsRequired))</label>
                        </td>
                        <td class="line-height-row">
                            @switch (customField.FieldFormat) {
                                case "user":
                                    <!--登记来源-->
                                    <div id="cfMenu_@customField.Id" class="dropdown">
                                        <button id="cf_@customField.Id" class="btn btn-light border-1 border-ccc bg-white btn-sm dropdown-toggle text-666 text-start fs-7" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width:80px;">
                                            
                                        </button>
                                        <ul id="cfDropdown_@customField.Id" class="dropdown-menu shadow text-666" aria-labelledby="cf_@customField.Id" style="width:400px;height:400px;overflow-y:scroll">
                                            <div class="row p-0 m-0 pt-0 p-1 rounded-1 bg-title border-bottom">
                                                <div class="col">
                                                    <input id="cfInput_@customField.Id" class="form-control m-0 pt-0 p-1 bg-white border-1 border-ccc rounded-1 fs-7" type="text" placeholder="快速查询..." autocomplete="off" />
                                                </div>
                                                <div class="col-1">
                                                    <a id="cfTrash_@customField.Id" href="#clearContent" class="text-269"><i class="bi bi-trash"></i></a>
                                                </div>
                                            </div>
                                            @foreach (var item in Model.DB_ProjectUser) {
                                                <li>
                                                    <a class="dropdown-item fs-7" htmlType="source_@customField.Id" href="#Temp" htmlId="@Html.Raw(item.Id)" htmlPinyin="@Html.Raw(item.pinyin)" htmlText="@Html.Raw(item.Firstname)">
                                                        <span style="float: left" class="text-666">@Html.Raw(item.Firstname)</span>&nbsp;
                                                        <span style="float: right; color: #8492a6;">@Html.Raw(item.pinyin)</span>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    break;
                                case "version":
                                    <!--版本-->
                                    <div id="cfMenu_@customField.Id" class="dropdown">
                                        <button id="cf_@customField.Id" class="btn btn-light border-1 border-ccc bg-white btn-sm dropdown-toggle text-start text-666 fs-7" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width:80px;">
                                            
                                        </button>
                                        <ul id="cfDropdown_@customField.Id" class="dropdown-menu shadow" aria-labelledby="cf_@customField.Id" style="width:80px;height:400px;overflow-y:scroll">
                                            <div class="row p-0 m-0 pt-0 p-1 rounded-1 bg-title border-bottom">
                                                <div class="col">
                                                    <input id="cfInput_@customField.Id" class="form-control m-0 pt-0 p-1 bg-white border-1 border-ccc rounded-1 text-666 fs-7" type="text" placeholder="快速查询..." autocomplete="off" />
                                                </div>
                                                <div class="col-1">
                                                    <a id="cfTrash_@customField.Id" href="#clearContent" class="text-269"><i class="bi bi-trash"></i></a>
                                                </div>
                                            </div>
                                            @foreach (var item in Model.DB_Version) {
                                                <li>
                                                    <a class="dropdown-item fs-7" htmlType="version_@customField.Id" href="#Temp" htmlId="@Html.Raw(item.Id)" htmlPinyin="@Html.Raw(item.Name)" htmlText="@Html.Raw(item.Name)">
                                                        <span style="float: left" class="text-666">@Html.Raw(item.Name)</span>&nbsp;
                                                        @*<span style="float: right; color: #8492a6;">@Html.Raw(item.Project_id)</span>*@
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    break;
                                case "date":
                                    <input class="form-control m-0 w-30 p-1 text-666 fs-7" type="date" asp-for="CurrentDateTime" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    break;
                                case "bool":
                                    <div class="form-check form-switch">
                                        <input id="cf_@customField.Id" class="form-check-input" type="checkbox" @RMUtils.Html_Checked(customField.DefaultValue)>
                                        <label class="form-check-label" for="cf_@customField.Id">是</label>
                                    </div>
                                    break;
                                case "list":
                                    <div class="dropdown">
                                        <a id="cf_@customField.Id" class="btn btn-sm text-start btn-light bg-white border-1 border-ccc dropdown-toggle text-666 fs-7" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width:80px;">
                                            @customField.DefaultValue
                                        </a>
                                        <ul class="dropdown-menu shadow fs-7" aria-labelledby="dropdownMenuLink">
                                            @{
                                                string[] possibleValues = customField.PossibleValues.Split('\n');
                                                foreach(string possbleValue in possibleValues) {
                                                    if ("---".Equals(possbleValue)) continue;
                                                  <li><a class="dropdown-item text-666" html_Cf_id="cf_@customField.Id" href="#PossibleValue">@possbleValue.Trim('-').Trim(' ') </a></li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                    break;
                                case "text":
                                    <textarea class="form-control text-666 fs-7" id="exampleFormControlTextarea1" rows="1" autocomplete="off"></textarea>
                                    break;

                            }
                        </td>
                    </tr>
                }
            }
            <tr>
                <td width="76px" class="p-0 text-right" valign="top">
                    <label for="inputPassword" class="col-form-label form-control-sm fw-bold fs-7">描述</label>
                </td>
                <td>
                    <textarea class="form-control fs-7 text-666" id="exampleFormControlTextarea1" rows="3" autocomplete="off"></textarea>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <label for="inputPassword" class="col-form-label form-control-sm fs-7">附件<br /><i class="bi bi-arrow-up-right-square fs-6"></i></label>
                </td>
                <td>
                    <table class="table table-sm table-hover w-100 table-bordered fs-7 rounded-3">
                        <tbody>
                            <tr>
                                <td>Otto</td>
                            </tr>
                            <tr>
                                <td>Thornton</td>
                            </tr>
                            <tr>
                                <td colspan="2">Larry the Bird</td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>        
    </div>
    <div style="margin-bottom:30px">
        &nbsp;
    </div>
    <div class="row fixed-bottom bottom-0 end-0 mr-0 bg-white border-1 border-ccc p-2">
        <div class="col mr-0">
            <div class="float-right text-start justify-content-end">
                <button type="button" class="btn btn-primary btn-sm p-1 ps-2 pr-3 text-end shadow fs-7"><i class="bi bi-check-lg fs-7 m-0 p-0"></i>&nbsp;&nbsp;保存</button>
                <button type="button" class="btn btn-secondary btn-sm shadow fs-7" data-bs-toggle="offcanvas" role="button" aria-controls="offcanvasExample">取消</button>
            </div>
        </div>
        <div class="col text-right ps-0">
            <span class="offcanvas-title fw-bold text-start" id="offcanvasExampleLabel"><i class="bi bi-lightning"></i>&nbsp;快速登记</span>
        </div>&nbsp;
    </div>

    @Model.Project_id

    <script>
        var m_ProjectTracker = @Html.Raw(Model.ProjectTracker);
                                                  var m_ProjectCustomField = @Html.Raw(Model.CustomFieldProject);
                                                  var m_TrackerCustomField = @Html.Raw(Model.CustomFieldTracker);

                                                  // 动态调整界面控件
        function changeHtmlControl(project_id, tracker_id) {
            $('#issue_Subject').val(project_id + "_" + tracker_id);
        }
        function setSubjectFocus() {
            $('#issue_Subject').focus();
        }
    </script>
    <script>
        $(document).ready(function () {
            @{foreach (CustomField customField in Model.CustomField) {
                switch (customField.FieldFormat) {
                    case "user":
                        // 检索+过滤
                        @:$("#cfInput_@customField.Id").on("keyup", function () {
                        @:    var value = $(this).val().toLowerCase();
                        @*@:    $(".dropdown-menu li").filter(function () {*@
                        @:    $("a[htmlType='source_@customField.Id']").filter(function () {
                        @:        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                        @:    });
                        @:});
                        // 选择时还原所有可选项
                        @:$('#cfDropdown_@customField.Id .dropdown-item').on("click", function () {
                        @:    var obj = $(this);
                        @:    $('#cf_@customField.Id').text(obj[0].attributes["htmlText"].nodeValue);
                        @:    $("#cfInput_@customField.Id").val('');
                        @:    $("a[htmlType='source_@customField.Id']").filter(function () {
                        @:        $(this).show();
                        @:    });
                        @:});
                        // 展开时设置输入焦点
                        @:var sourceMenu_@customField.Id = document.getElementById('cfMenu_@customField.Id');
                        @:(sourceMenu_@customField.Id).addEventListener('shown.bs.dropdown',function(){
                        @:    $("#cfInput_@customField.Id").focus();
                        @:});
                        @:$('#cfTrash_@customField.Id').on("click", function () {
                        @:$('#cf_@customField.Id').text('');
                        @:});
                        break;
                    case "version":
                        // // 检索+过滤
                        @:$("#cfInput_@customField.Id").on("keyup", function () {
                        @:    var value = $(this).val().toLowerCase();
                        @:    $("a[htmlType='version_@customField.Id']").filter(function () {
                        @:        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                        @:    });
                        @:});
                        // 选择时还原所有可选项
                        @:$('#cfDropdown_@customField.Id .dropdown-item').on("click", function () {
                        @:    var obj = $(this);
                        @:    $('#cf_@customField.Id').text(obj[0].attributes["htmlText"].nodeValue);
                        @:    $("#cfInput_@customField.Id").val('');
                        @:    $("a[htmlType='version_@customField.Id']").filter(function () {
                        @:        $(this).show();
                        @:    });
                        @:});
                        // 展开时设置输入焦点
                        @:var versionMenu_@customField.Id = document.getElementById('cfMenu_@customField.Id');
                        @:(versionMenu_@customField.Id).addEventListener('shown.bs.dropdown',function(){
                        @:    $("#cfInput_@customField.Id").focus();
                        @:});
                        @:$('#cfTrash_@customField.Id').on("click", function () {
                        @:$('#cf_@customField.Id').text('');
                        @:});
                        break;
                    case "list":
                        @:$("a[html_Cf_id='cf_@customField.Id']").filter(function () {
                        @:  $(this).on('click', function () {
                        @:      var cf_id = $(this).attr("html_Cf_id");
                        @:      $('#' + cf_id).text($(this).text());
                        @:  });
                        @:});
                        break;
                    }
                }
            }
        });
    </script>
</body>
</html>