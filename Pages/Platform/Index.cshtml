    });
    $('li.issue-context-item').click(function () {
        var issue_id = $('#txt_issue_id').val();
        var issue_module_id = $('#txt_issue_module_id').val();
        if (issue_id <= 0 || issue_module_id <= 0) {
            return;
        }

