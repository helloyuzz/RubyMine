@functions{
    string BuildTree(int? parent_id,int user_id) {
        string htmlTree = "";
        if (parent_id == null) {
            htmlTree = "<ul id=\"module_tree\" class=\"jumpNav\">";
        } else {
            htmlTree = "<ul id=\"ul_" + parent_id + "\" htmlId=\"" + parent_id + "\" class=\"jumpNav nested ";
                if (GlobalCache.ActiveNodes.FirstOrDefault(t=>t.Key == user_id).Value.Contains(parent_id.Value)) { 
            //if (SessionUtils.Get<ActiveNodes>(HttpContext.Session, "ActiveNodes").Contains(parent_id.Value)) {
                htmlTree += " activeTreeNode";
            }
            htmlTree += "\">";
        }

        var itemCount = Model.Modules.Count(t => t.PId == parent_id);
        if (itemCount > 0) {
            foreach (Module item in Model.Modules.Where(t => t.PId == parent_id).OrderBy(t => t.Index)) {
                int subNode = Model.Modules.Count(t => t.PId == item.Id);
                var activeNode = "";

                if (Model.Module_id == item.Id) {
                    activeNode = " active";
                }

                string html_attr_id = " attr-id=\"" + item.Id + "\" attr-pid=\"" + item.PId + "\" attr-index=\"" + item.Index + "\"";
                string html_attr_title = " attr-title=\"" + item.Name + "\"";

                string edit_icon = "<span class=\"float-end p-0\"><i id=\"edit_icon_" + item.Id + "\" class=\"edit-icon bi bi-pencil d-none mr-2\"" + html_attr_id + html_attr_title + " title=\"编辑\" style=\"cursor:pointer;\"></i><i id=\"add_icon_" + item.Id + "\"" + html_attr_id + " class=\"add-icon bi bi-plus-lg d-none\" title=\"新增下级\" style=\"cursor:pointer;\"></i></span>";
                if (subNode > 0) {
                    htmlTree += "<li id=\"html_node_" + item.Id + "\" class=\"li-node " + activeNode + "\"" + html_attr_id + html_attr_title + ">";
                    htmlTree += "   <span class=\"caret fs-9 w-auto d-inline-block w-75\" htmlId=\"" + item.Id + "\">";
                    // 当前节点不允许点击，避免重新刷新
                    if (Model.Module_id != item.Id) {
                        htmlTree += "       <a id=\"lnk_\"" + item.Id + " class=\"text-decoration-none text-269 d-inline-block\" href=\"?action=load&module_id=" + item.Id + "\" title='查看'>";
                    }
                    htmlTree += "               <img class=\"w-auto\" src=\"/images/xp/briefcase.png\">&nbsp;<span id='lbl_" + item.Id + "'>" + item.Name + "</span>";
                    if (Model.Module_id != item.Id) {
                        htmlTree += "       </a>";
                    }
                    htmlTree += "   </span>";
                    htmlTree += edit_icon;
                    htmlTree += "</li>";

                    string tempTree = BuildTree(item.Id,user_id);
                    if (string.IsNullOrEmpty(tempTree) == false) {
                        htmlTree += tempTree;
                    }
                } else {
                    htmlTree += "<li id=\"html_node_" + item.Id + "\" class=\"li-node " + activeNode + "\"" + html_attr_id + html_attr_title + ">";
                    htmlTree += "   <span class=\"fs-9\" style=\"padding-left:19px;\">";
                    htmlTree += "       <a class=\"text-decoration-none text-dark d-inline-block\" href=\"?action=load&module_id=" + item.Id + "\" title='查看'>";
                    htmlTree += "           <img src=\"/images/xp/page_white_text.png\">&nbsp;<span id='lbl_" + item.Id + "'>" + item.Name + "</span>";
                    htmlTree += "       </a>";
                    htmlTree += "   </span>";
                    htmlTree += edit_icon;
                    htmlTree += "</li>";
                }
            }
        }
        htmlTree += "</ul>";
        return htmlTree;
    }
}
